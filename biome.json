{
  "$schema": "https://biomejs.dev/schemas/1.7.1/schema.json",
  "organizeImports": {
    "enabled": false
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "suspicious": {
        "noExplicitAny": "off",
        "noExportsInTest": "off"
      },
      "complexity": {
        "noBannedTypes": "off",
        "useLiteralKeys": "off"
      },
      "style": {
        "useImportType": "off"
      }
    },
    "ignore": [
      "./website/build/**",
      "./website/.docusaurus/**",
      "./examples/**/__generated__/**",
      "./examples/**/typedef.ts",
      "./.yarn/**"
    ]
  },
  "formatter": {
    "enabled": false
  },
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  }
}
