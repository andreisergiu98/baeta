{
  "$schema": "https://biomejs.dev/schemas/1.4.1/schema.json",
  "organizeImports": {
    "enabled": false
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "suspicious": {
        "noExplicitAny": "off"
      },
      "complexity": {
        "noBannedTypes": "off",
        "useLiteralKeys": "off"
      }
    },
    "ignore": [
      "./packages/*/dist/**",
      "./plugins/*/dist/**",
      "./tools/*/dist/**",
      "./website/build/**",
      "./website/.docusaurus/**",
      "./examples/*/dist/**",
      "./examples/**/__generated__/**",
      "./examples/**/typedef.ts",
      "./node_modules/**",
      "./.yarn/**",
      "./.pnp.cjs",
      "./.pnp.loader.mjs"
    ]
  },
  "formatter": {
    "enabled": false
  }
}
