{
  "$schema": "https://biomejs.dev/schemas/1.9.2/schema.json",
  "files": {
    "ignore": [
      "website/build/**",
      "website/.docusaurus/**",
      "examples/**/modules/baeta-*/*",
      "examples/**/modules/autoload.ts",
      "examples/**/__generated__/**",
      "examples/**/typedef.ts",
      "examples/**/.wrangler/**",
      ".yarn/**",
      ".tsup/**",
      ".turbo/**",
      "dist/**"
    ]
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "suspicious": {
        "noExportsInTest": "off"
      },
      "correctness": {
        "useImportExtensions": "error",
        "noUnusedImports": "warn"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "lineWidth": 100,
    "indentStyle": "tab"
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single"
    }
  },
  "json": {
    "formatter": {
      "indentWidth": 2,
      "indentStyle": "space",
      "lineWidth": 1
    }
  },
  "organizeImports": {
    "enabled": true
  },
  "css": {
    "parser": {
      "cssModules": true
    }
  },
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  }
}
