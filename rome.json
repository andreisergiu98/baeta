{
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "nursery": {
        "noExplicitAny": "off"
      }
    },
    "ignore": [
      "./packages/*/dist/**",
      "./plugins/*/dist/**",
      "./tools/*/dist/**",
      "./website/build/**",
      "./website/.docusaurus/**",
      "./examples/*/dist/**",
      "./examples/**/__generated__/**",
      "./examples/**/typedef.ts",
      "./node_modules/**",
      "./.yarn/**",
      "./.pnp.cjs",
      "./.pnp.loader.mjs"
    ]
  }
}
